<div class='fixed top-0 left-0 right-0 bg-white shadow-xl flex items-center px-8'>
  
  <%= link_to 'Main room', root_path, class: 'font-bold font-2xl' %>
  
  <div class='ml-auto flex gap-2'>
  <% if current_user %>
    <%= link_to 'Log out', destroy_user_session_path, data: { "turbo-method": :delete }, class: "btn" %>
    <% link_to 'Edit', edit_user_registration_path, class: "btn" %>
    <%= link_to users_edit_icon_path, class: 'dbg-purple-200 p-2 block', data: { turbo_frame: 'modal' } do %>
          <%= image_tag "icons/#{current_user.icon}.svg", class: "block w-8" %>
    <% end %>
<% else %>
  <%= link_to 'Sign in', new_user_registration_path, class: "btn" %>
  <%= link_to 'Log in', new_user_session_path, class: "btn" %>
<% end %>
  </div>
</div>
